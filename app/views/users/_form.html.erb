<% if @user.errors.any? %>
  <%= render 'shared/error_messages', obj: @user %>
<% end %>

<div class='well'>
  <%= form_for @user do |f| %>

    <%= f.label :username %>
    <%= f.text_field :username %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :time_zone %>
    <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, default: Time.zone.name %>

    <hr/>

    <%= f.submit @user.new_record? ? "Register" : "Update Profile", class: 'btn btn-primary' %>
    
  <% end %>
</div>