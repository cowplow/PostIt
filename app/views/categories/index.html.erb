<%= render 'shared/content_title', title: "All Categories" %>

<% @categories.each do |category| %>
  <div class='row'>
    <div class='span8 well'>
      <h4><%= link_to category.name, category_path(category) %></h4>
      <small>
        <span>
          <%= link_to("#{pluralize(category.posts.size, 'post')}", category_path(category)) %>
        </span>
      </small>
    </div>
  </div>
<% end %>