<% show_post ||= false %>



<div class='row'>

  <div class='span0 well text-center'>
    <% if logged_in? %>
      <%= link_to vote_post_comment_path(comment.post, comment, vote: true), method: 'post', remote: true do %>
        <i class='icon-arrow-up'></i>
      <% end %>

      <br/>

        <span id='comment_<%= comment.id %>_votes'><%= "#{comment.total_votes} #{'vote'.pluralize(comment.total_votes)}" %></span>

      <br/>

      <%= link_to vote_post_comment_path(comment.post, comment, vote: false), method:'post', remote: true do %>
        <i class='icon-arrow-down'></i>
      <% end %>

    <% else %>

      <%= "#{comment.total_votes} #{'vote'.pluralize(comment.total_votes)}" %>

    <% end %>
  </div>

  <div class='well span8'>
    <em>
      <% if show_post %>
        "<%= comment.body %>" on <%= link_to comment.post.title, post_path(comment.post) %>
      <% else %>
        "<%= comment.body %>"
      <% end %>
    </em>
    <hr/>
    <p>
      <span class='quiet'>Posted by</span> <%= link_to comment.creator.username, user_path(comment.creator.slug) %>
      <small>at <%= fix_date(comment.created_at) %></small>
    </p>
  </div>
</div>
